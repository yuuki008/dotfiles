{
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": false,
  "enterForNewline": true,
  "permissions": {
    "allow": [
      "Bash(brew --prefix:*)",
      "Bash(brew --version:*)",
      "Bash(brew config:*)",
      "Bash(brew deps:*)",
      "Bash(brew doctor:*)",
      "Bash(brew info:*)",
      "Bash(brew leaves:*)",
      "Bash(brew list:*)",
      "Bash(brew outdated:*)",
      "Bash(brew search:*)",
      "Bash(brew services list:*)",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(gh api:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh search:*)",
      "Bash(gh status:*)",
      "Bash(gh workflow list:*)",
      "Bash(gh workflow view:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(git switch:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(tree:*)",
      "Bash(TZ=Asia/Tokyo date:*)",
      "Bash(bash ~/.claude/skills/grok-search/scripts/search.sh:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Read",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm *)",
      "Bash(rmdir *)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "open -a Ghostty"
          },
          {
            "type": "command",
            "command": "afplay ~/.claude/sounds/complete.wav"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "open -a Ghostty"
          },
          {
            "type": "command",
            "command": "afplay ~/.claude/sounds/confirm.wav"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  }
}
